# =============================================================================
# apps/demo/.env.local — Copy this file to .env.local and fill in real values.
# Only set the vars needed for the demos you want to run.
# =============================================================================

# ─── /chatbot & /custom demos ───────────────────────────────────────────────
# Get a key at https://aistudio.google.com/apikey
NEXT_PUBLIC_GEMINI_API_KEY=your-gemini-api-key
# Also used by LiveKit agent (@livekit/agents-plugin-google)
GOOGLE_API_KEY=your-gemini-api-key

# ─── /livekit demo ──────────────────────────────────────────────────────────
# Convex deployment (HTTP Actions URL, ends in .convex.site)
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.site
NEXT_PUBLIC_APP_SLUG=demo
# Server-only — never sent to browser. Must match the app secret in Convex.
APP_SECRET=your-app-secret
# LiveKit Cloud WebSocket URL for client connection
NEXT_PUBLIC_LIVEKIT_URL=wss://your-app.livekit.cloud

# ─── /twilio-call demo ──────────────────────────────────────────────────────
# LiveKit server API (HTTPS, not WSS)
LIVEKIT_URL=https://your-app.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
# SIP trunk ID from LiveKit Cloud (needs an outbound trunk for dialing out)
LIVEKIT_SIP_TRUNK_ID=ST_xxx

# ─── Twilio (for /twilio-call SIP trunking) ──────────────────────────────────
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+15551234567
