# =============================================================================
# Root .env.example — reference for ALL env vars used across the monorepo.
# Copy to .env.local in the relevant app directory (e.g. apps/demo/.env.local).
# Do NOT create a root .env — each app should own its own env vars.
# =============================================================================

# ─── Gemini ──────────────────────────────────────────────────────────────────
# Required for: /chatbot, /custom demos
NEXT_PUBLIC_GEMINI_API_KEY=your-gemini-api-key

# ─── Convex Backend ─────────────────────────────────────────────────────────
# Required for: /livekit demo (room management + telemetry)
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.site
NEXT_PUBLIC_APP_SLUG=demo
APP_SECRET=your-app-secret

# ─── LiveKit (client) ───────────────────────────────────────────────────────
# Required for: /livekit demo UI
NEXT_PUBLIC_LIVEKIT_URL=wss://your-app.livekit.cloud

# ─── LiveKit (server) ───────────────────────────────────────────────────────
# Required for: /twilio-call demo, LiveKit agent
LIVEKIT_URL=https://your-app.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# ─── LiveKit Recording Egress (optional, for automatic persisted call audio) ─
# If unset, backend relies on LiveKit Auto Egress webhooks only.
LIVEKIT_EGRESS_MANUAL_START=true
# Participant egress file output is mp4; mp3/ogg values are ignored by backend.
LIVEKIT_EGRESS_FILE_TYPE=mp4
LIVEKIT_EGRESS_FILEPATH_PREFIX=recordings
LIVEKIT_EGRESS_S3_ACCESS_KEY=your-storage-access-key
LIVEKIT_EGRESS_S3_SECRET=your-storage-secret
LIVEKIT_EGRESS_S3_BUCKET=your-recording-bucket
LIVEKIT_EGRESS_S3_REGION=auto
LIVEKIT_EGRESS_S3_ENDPOINT=https://<account>.r2.cloudflarestorage.com
LIVEKIT_EGRESS_S3_FORCE_PATH_STYLE=true
# Public base URL used to turn stored object paths into playable links.
LIVEKIT_RECORDINGS_PUBLIC_BASE_URL=https://cdn.yourdomain.com

# ─── LiveKit SIP (Twilio trunk) ─────────────────────────────────────────────
# Required for: /twilio-call demo only
LIVEKIT_SIP_TRUNK_ID=ST_xxx
