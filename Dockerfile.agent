# ---- build ----
FROM node:20-slim AS build
RUN apt-get update && apt-get install -y --no-install-recommends ca-certificates && rm -rf /var/lib/apt/lists/*
RUN corepack enable && corepack prepare pnpm@10.28.2 --activate
WORKDIR /app

COPY pnpm-lock.yaml pnpm-workspace.yaml package.json turbo.json tsconfig.base.json ./
COPY packages/sdk/package.json packages/sdk/package.json
COPY apps/web/package.json apps/web/package.json
COPY apps/backend/package.json apps/backend/package.json

RUN pnpm install --frozen-lockfile

COPY packages/sdk packages/sdk

RUN pnpm turbo run build --filter=@genai-voice/sdk...

# ---- runner ----
FROM node:20-slim AS runner

# @livekit/rtc-node native binary needs CA certs for HTTPS region lookup
RUN apt-get update && apt-get install -y --no-install-recommends ca-certificates && rm -rf /var/lib/apt/lists/*

WORKDIR /app
ENV NODE_ENV=production

# Copy built workspace â€” agent needs node_modules at runtime
COPY --from=build /app/node_modules ./node_modules
COPY --from=build /app/packages/sdk/dist ./packages/sdk/dist
COPY --from=build /app/packages/sdk/src/agent/resources ./packages/sdk/dist/agent/resources
COPY --from=build /app/packages/sdk/package.json ./packages/sdk/package.json
COPY --from=build /app/packages/sdk/node_modules ./packages/sdk/node_modules
COPY --from=build /app/package.json ./package.json
COPY --from=build /app/pnpm-workspace.yaml ./pnpm-workspace.yaml

CMD ["node", "packages/sdk/dist/agent/index.mjs", "start"]
